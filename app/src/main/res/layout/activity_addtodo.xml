<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Addtodo">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/edt_name"
            android:layout_width="273dp"
            android:layout_height="57dp"
            android:layout_marginTop="31dp"
            android:background="#E3E1E1"
            android:fontFamily="@font/roboto"
            android:hint="To do name"
            android:inputType="textAutoComplete"
            android:paddingStart="15dp"
            android:textAllCaps="false"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/edt_description"
            android:layout_width="273dp"
            android:layout_height="57dp"
            android:layout_marginTop="15dp"
            android:background="#E3E1E1"
            android:fontFamily="@font/roboto"
            android:inputType="textAutoComplete"
            android:hint="To do description"
            android:paddingStart="15dp"
            android:textAllCaps="false"
            android:textColor="@color/black" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="273dp"
            android:layout_height="57dp"
            android:layout_marginTop="15dp"
            android:background="#E3E1E1"
            android:fontFamily="@font/roboto"
            android:hint="To do degree"
            android:paddingStart="15dp"
            android:textAllCaps="false"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/edt_date"
            android:layout_width="273dp"
            android:layout_height="57dp"
            android:layout_marginTop="15dp"
            android:background="#E3E1E1"
            android:fontFamily="@font/roboto"
            android:hint="To do create date"
            android:paddingStart="15dp"
            android:inputType="date"
            android:textAllCaps="false"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/edt_dedline"
            android:layout_width="273dp"
            android:layout_height="57dp"
            android:layout_marginTop="15dp"
            android:background="#E3E1E1"
            android:fontFamily="@font/roboto"
            android:hint="To do dedline"
            android:inputType="textAutoComplete"
            android:paddingStart="15dp"
            android:textAllCaps="false"
            android:textColor="@color/black" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_save"
        android:layout_width="137dp"
        android:layout_height="45dp"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/backround"
        android:fontFamily="@font/roboto"
        android:text="Save"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>